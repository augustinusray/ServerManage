
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <title>ServerManage</title>
    <link rel="stylesheet" type="text/css" href="~/css/login.css">
    <link rel="stylesheet" href="~/css/layer.css" id="layui_layer_skinlayercss" style="">
</head>
<body>
    <div id="box"><canvas class="particles-js-canvas-el" width="1920" height="857" style="width: 100%; height: 100%;"></canvas></div>
    <div class="cent-box">
        <div class="cent-box-header">
            <h2 class="sub-title">ServerManage</h2>
        </div>
        <div class="cont-main clearfix">
            <div class="login form">
                <div class="group">
                    <form id="loginform">
                        <div class="group-ipt email">
                            <input type="text" name="username" id="username" class="ipt" placeholder="登录名" required="">
                        </div>
                        <div class="group-ipt password">
                            <input type="password" name="password" id="password" class="ipt" placeholder="登录密码" required="">
                        </div>
                        <div class="group-ipt verify">
                            <input type="text" name="verify" id="verify" class="ipt" placeholder="验证码" required="">
                        </div>
                    </form>
                </div>
            </div>
            <div class="button">
                <button type="submit" class="login-btn register-btn" id="submit">登录</button>
            </div>
            @*<div class="remember clearfix">
                    <label class="remember-me"><span class="icon"><span class="zt"></span></span><input type="checkbox" name="remember-me" id="remember-me" class="remember-mecheck" checked="">记住我</label>
                </div>*@
        </div>
    </div>
    <div class="footer">
        <p> &amp; 2018</p>
    </div>
    <script src="~/js/particles.js" type="text/javascript"></script>
    <script src="~/js/background.js" type="text/javascript"></script>
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/js/layer.js" type="text/javascript"></script>
    <script>
        //$("#remember-me").click(function () {
        //    var n = document.getElementById("remember-me").checked;
        //    if (n) {
        //        $(".zt").show();
        //    } else {
        //        $(".zt").hide();
        //    }
        //});
        $("#submit").click
            (
            function () {
                var arr = $('#loginform').serialize();  
                $.ajax({
                    url: "/Home/Login",
                    data: arr,
                    type: "post",
                    dataType: "json",
                    success: function (data) {
                        alert("测试发送接收成功");
                    },
                    error: function () {
                        console.log("失败");
                    }
                }
                );

    </script>
</body>
</html>