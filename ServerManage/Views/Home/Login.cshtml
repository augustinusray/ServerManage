
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>ServerManage</title>
    <link rel="stylesheet" type="text/css" href="~/css/login.css">
</head>
<body>
    <div id="box"><canvas class="particles-js-canvas-el" width="1920" height="857" style="width: 100%; height: 100%;"></canvas></div>
    <div class="cent-box">
        <div class="cent-box-header">
            <h2 class="sub-title">ServerManage</h2>
        </div>
        <div class="cont-main clearfix">
            <div class="tip" style="color:red">
                <div class="validation-summary-valid" data-valmsg-summary="true">
                    <ul>
                        <li id="errormessage" style="display:none"></li>
                    </ul>
                </div>
            </div>
            <form id="loginform" method="post">
                <div class="login form">
                    <div class="group">
                        <div class="group-ipt email">
                            <input type="text" name="UserName" id="username" class="ipt" placeholder="登录名" required="">
                        </div>
                        <div class="group-ipt password">
                            <input type="password" name="PassWord" id="password" class="ipt" placeholder="登录密码" required="">
                        </div>
                        <div class="group-ipt verify">
                            <input type="text" name="verify" id="verify" class="ipt" placeholder="验证码">
                        </div>

                    </div>
                </div>
                <div class="button">
                    <button type="button" id="button">登录</button>
                </div>
            </form>
        </div>
    </div>
    <div class="footer">
        <p> &amp; 2018</p>
    </div>
    <script src="~/js/particles.js" type="text/javascript"></script>
    <script src="~/js/background.js" type="text/javascript"></script>
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js" type="text/javascript"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
    <script>
        $("#button").click
            (function () {
                var arr = $('#loginform').serialize();
                $.ajax({
                    url: "/Home/Login",
                    data: arr,
                    type: "post",
                    async: true,
                    dataType: "json",
                    success: function (data) {
                        alert(JSON.stringify(data));
                        if (data == 0) {
                            $("#errormessage").show();
                            $("#errormessage").html("登录名或密码错误");
                            console.log('123');
                        }
                        else { $("#errormessage").hide(); }

                    },
                    error: function () {
                        $("#errormessage").html("请检查您的网络");
                    }
                });
            });

    </script>
</body>
</html>