@model ServerManage.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>ServerManage</title>
    <link rel="stylesheet" type="text/css" href="~/css/login.css">
</head>
<body>
    <div id="box"><canvas class="particles-js-canvas-el" width="1920" height="857" style="width: 100%; height: 100%;"></canvas></div>
    <div class="cent-box">
        <div class="cent-box-header">
            <h2 class="sub-title">ServerManage</h2>
        </div>
        <div class="cont-main clearfix">
            <div asp-validation-summary="All" class="text-danger" style="color:red"></div>
            <form id="loginform" asp-controller="Home" asp-action="Login" method="post">
                <div class="login form">
                    <div class="group">
                        <div class="group-ipt email">
                            <input asp-for="UserName" type="text" class="ipt" placeholder="登录名" required="">
                        </div>
                        <div class="group-ipt password">
                            <input asp-for="PassWord" type="password" id="password" class="ipt" placeholder="登录密码" required="">
                        </div>
                        <div class="group-ipt verify">
                            <input type="text" name="verify" id="verify" class="ipt" placeholder="输入验证码">
                        </div>
                    </div>
                </div>
                <div class="button">
                    <button type="submit" id="button">登录</button>
                </div>
            </form>
        </div>
    </div>
    <div class="footer">
        <p> &amp; 2018</p>
    </div>
    <script src="~/js/particles.js" type="text/javascript"></script>
    <script src="~/js/background.js" type="text/javascript"></script>
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
</body>
</html>