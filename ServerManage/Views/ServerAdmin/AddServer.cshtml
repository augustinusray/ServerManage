@model ServerManage.ViewModels.AddServerVM

@{
    ViewData["Title"] = "AddServer";
    Layout = "~/Views/Shared/_Form_Layout.cshtml";
}

<h2>AddServer</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddServer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServerName" class="control-label"></label>
                <input asp-for="ServerName" class="form-control" />
                <span asp-validation-for="ServerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServerPass" class="control-label"></label>
                <input asp-for="ServerPass" class="form-control" />
                <span asp-validation-for="ServerPass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServerAuthority" class="control-label"></label>
                <input asp-for="ServerAuthority" class="form-control" />
                <span asp-validation-for="ServerAuthority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

