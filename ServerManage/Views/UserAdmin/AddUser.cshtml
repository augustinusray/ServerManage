@model ServerManage.ViewModels.UserAdmin.AddUserVM
@{
    Layout = "~/Views/Shared/_Form_Layout.cshtml";
    ViewData["Title"] = "AddUser";
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewData["Title"]</h4>
</div>
<div class="modal-body">
    <div class="container-fluid">
        <div class="tab-content col-lg-8" style="display: block;">
            <form asp-action="AddUser" id="formadd">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserPass" class="control-label"></label>
                    <input asp-for="UserPass" class="form-control" />
                    <span asp-validation-for="UserPass" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmUserPass" class="control-label"></label>
                    <input asp-for="ConfirmUserPass" class="form-control" />
                    <span asp-validation-for="ConfirmUserPass" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserAuthority" class="control-label"></label>
                    <input asp-for="UserAuthority" class="form-control" />
                    <span asp-validation-for="UserAuthority" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="submit" id="sumbitadd" form="formadd" class="btn btn-primary">确定</button>
    <button type="reset" class="btn btn-warning" data-dismiss="modal">取消</button>
</div>
